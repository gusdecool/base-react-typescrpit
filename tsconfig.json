{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "diagnostics": false,
    "jsx": "react",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise",
      "es2018.promise"
    ],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./build/",
    "removeComments": true,
    "strict": true,
    "sourceMap": true,
    "target": "es5",
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/Scss/**/*"
  ]
}
